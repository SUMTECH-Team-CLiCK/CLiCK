{
  "manifest_version": 3,
  "name": "CLiCK",
  "version": "1.0.0",
  "description": "ChatGPT UI 개선 확장 프로그램",
  "permissions": ["storage"],
  "host_permissions": ["http://localhost:3001/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}